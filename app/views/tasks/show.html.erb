<h2>View task</h2>

<div>
  <%= link_to 'Edit task', edit_task_path(@task.id) %>
</div>

<div>
  <%= @task.title %>
</div>
<div>
  <%= @task.details %>
</div>

<div>
  <% if @task.completed %>
    <p>This task has been completed</p>
  <% else %>
    <p>This task has yet to be completed</p>
  <% end %>
</div>

<%= link_to 'Back to list', tasks_path %>
